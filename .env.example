# Environment
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=info

# API Server
PORT=3000

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=dev-token-change-in-production
INFLUXDB_ORG=chimera
INFLUXDB_BUCKET=zcash_metrics

# MongoDB
MONGODB_URI=mongodb://admin:adminpassword@localhost:27017
MONGODB_DATABASE=chimera

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=chimera-storage

# OpenAI
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (to be configured)
ZCASH_NODE_RPC_URL=http://localhost:8232
ZCASH_NODE_RPC_USER=
ZCASH_NODE_RPC_PASSWORD=

# Exchange APIs
BINANCE_API_KEY=
BINANCE_API_SECRET=
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Social APIs
TWITTER_API_KEY=
TWITTER_API_SECRET=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
GITHUB_TOKEN=
