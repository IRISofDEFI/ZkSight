{
  "name": "chimera-analytics",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d && npm run dev:api",
    "dev:api": "npm run dev --workspace=@chimera/api",
    "dev:dashboard": "npm run dev --workspace=@chimera/dashboard",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
