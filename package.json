{
  "name": "chimera-analytics",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@chimera/dashboard",
    "dev:api": "npm run dev --workspace=@chimera/api",
    "dev:all": "docker-compose up -d && concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
